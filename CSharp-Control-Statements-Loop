//#C language with Loop Statements.
using System; 
  
class whileLoopDemo 
{ 
    public static void Main() 
    { 
        int x = 1; 
   
        // Exit when x becomes greater than 4 
        while (x <= 12) 
        { 
            Console.WriteLine("Hello Loop Statements"); 
   
            // Increment the value of x for 
            // next iteration 
            x++; 
        } 
    } 
} 


// C# program to illustrate for loop. 
using System; 
  
class forLoopDemo 
{ 
    public static void Main() 
    { 
        // for loop begins when x=1 
        // and runs till x <=12 
        for (int x = 1; x <= 12; x++) 
            Console.WriteLine("Hello Loops"); 
    } 
} 


// C# program to illustrate do-while loop 
using System; 
  
class dowhileloopDemo  
{ 
    public static void Main() 
    { 
        int x = 21; 
        do
        { 
            // The line will be printed even 
            // if the condition is false 
            Console.WriteLine("GeeksforGeeks"); 
            x++; 
        } 
        while (x < 20); 
    } 
} 


// C# program to demonstrate infinite loop 
using System; 
  
class infiniteLoop
{ 
    public static void Main() 
    {  
        // The statement will be printed 
        // infinite times 
        for(;;) 
        Console.WriteLine("This is printed infinite times"); 
    } 
} 



// C# program to demonstrate nested loops 
using System; 
  
class nestedLoops 
{ 
    public static void Main() 
    { 
        // loop within loop printing GeeksforGeeks 
       for(int i = 2; i < 3; i++) 
             for(int j = 1; j < i; j++) 
                 Console.WriteLine("GeeksforGeeks"); 
    } 
} 


/ C# program to demonstrate continue statement 
using System; 
  
class demoContinue 
{ 
    public static void Main() 
    {     
        // GeeksforGeeks is printed only 2 times 
        // because of continue statement 
        for(int i = 1; i < 3; i++) 
        { 
            if(i == 2) 
              continue; 
              
            Console.WriteLine("GeeksforGeeks");  
        } 
    } 
}  
